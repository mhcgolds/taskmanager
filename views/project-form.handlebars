{{#if msg}}
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-success alert-dismissable">{{msg.text}}</div>
    </div>
</div>
{{/if}}

<div class="row">
    <div class="col-lg-6">
        <form action="/project/save" method="post">
            <div class="row">
                <div class="form-group">
                    <label>Description</label>
                    <input name="description" class="form-control" value="{{project.description}}">
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label>Location</label>
                    <input name="location" class="form-control" value="{{project.location}}">
                </div>
            </div>
            <div class="form-group">
                <a href="/project/" class="btn btn-danger">Cancel</a>
                <input type="submit" class="btn btn-default">
            </div>
        </form>
    </div>
</div>