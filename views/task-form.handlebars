{{#if msg}}
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-success alert-dismissable">{{msg.text}}</div>
    </div>
</div>
{{/if}}

<div class="row">
    <div class="col-lg-6">
        <form action="/task/save" method="post">
            <div class="row">
                <div class="col-lg-2">
                    <div class="form-group">
                        <label>Code</label>
                        <input name="code" class="form-control" value="{{task.code}}"{{#if detail}} readonly="readonly"{{/if}}>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="form-group">
                        <label>Description</label>
                        <input name="description" class="form-control" value="{{task.description}}"{{#if detail}} readonly="readonly"{{/if}}>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Project</label> 
                        <select name="project-id" class="form-control"{{#if detail}} readonly="readonly"{{/if}}>
                            {{#each projects}}
                            <option value="{{_id}}">{{description}}
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Status</label> 
                        <select name="status" class="form-control"{{#if detail}} readonly="readonly"{{/if}}>
                            <option value="1">Stopped</option>
                            <option value="2">Working</option>
                            <option value="3">Paused</option>
                            <option value="4">Finished</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Type</label> 
                        <select name="type" class="form-control"{{#if detail}} readonly="readonly"{{/if}}>
                            <option value="1">New feature</option>
                            <option value="2">Maintenance</option>
                            <option value="3">Bug</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Tags</label>
                        <input name="tags" class="form-control" value="{{task.tags}}"{{#if detail}} readonly="readonly"{{/if}}>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Conclusion estimated time</label>
                        <div class="row">
                            <div class="col-lg-4">
                                <input name="esthours" type="number" class="form-control" value="{{task.esthours}}"{{#if detail}} readonly="readonly"{{/if}}> hours
                            </div>
                            <div class="col-lg-4">
                                <input name="estminutes" type="number" class="form-control" value="{{task.estminutes}}"{{#if detail}} readonly="readonly"{{/if}}> minutes
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{#if detail}}

            <div class="form-group">
                <label>Working Actions</label> 
                {{#if task.finished}}
                {{else}}
                    {{#if task.stopped }}
                    <a href="/task/action/{{task._id}}/play" class="btn btn-default">
                        <i class="fa fa-play"></i>
                        Start
                    </a>
                    {{/if}}
                    {{#if task.playing }}
                    <a href="/task/action/{{task._id}}/stop" class="btn btn-default">
                        <i class="fa fa-stop"></i>
                        Stop
                    </a>
                    <a href="/task/action/{{task._id}}/pause" class="btn btn-default">
                        <i class="fa fa-pause"></i>
                        Pause
                    </a>
                    <a href="/task/action/{{task._id}}/finish" class="btn btn-default">
                        <i class="fa fa-check"></i>
                        Finish
                    </a>
                    {{/if}}
                {{/if}}
            </div>

                {{#if task.history}}

                    <table class="table">
                        <tr>
                            <th>Time</th>
                            <th>Action</th>
                        </tr>
                        {{#each task.history}}
                        <tr>
                            <td>{{time}}</td>
                            <td>{{status}}</td>
                        </tr>
                        {{/each}}
                    </table>

                {{/if}}

            {{/if}}

            <div class="form-group">
                <a href="/" class="btn">Cancel</a>
                {{#if detail}}
                {{else}}
                <input type="submit" class="btn btn-primary" value="Save">
                {{/if}}
            </div>
        </form>
    </div>
    {{#if watching}}
    <div class="col-lg-6" id="file-list">
        File changes on {{watching}}
        <ul class="list-group">
        </ul>

        <p class="text-muted"></p>
        
        <div class="form-group">
            <label>Repository Actions</label>

            {{#if task.finished}}

            <a href="/task/add-all/{{task._id}}" class="btn btn-default">
                <i class="fa fa-asterisk"></i>
                Add All
            </a>
            <button class="btn btn-default repo-action-commit">
                <i class="fa fa-upload"></i>
                Commit
            </button>
            <a href="/task/push/{{task._id}}" class="btn btn-default">
                <i class="fa fa-cloud-upload"></i>
                Push
            </a>
            {{else}}
            <i>Not actions available until task is <strong>finished</strong>.</i>
            {{/if}}
        </div>
        
        {{#if task.finished}}

        <div class="form-group well" id="commit-message">
            <i class="fa fa-comment-o"></i>Commit Message:
            <form action="/task/commit/{{task._id}}" method="post">
                <textarea class="form-control"></textarea>
                <button class="repo-action-commit-send btn btn-primary pull-right">Send</button>
                <div class="clearfix"></div>
            </form>
        </div>

        {{/if}}
    </div>
    {{/if}}
</div>